def snake():
    global x, y, dir_y, dir_x, vertical, horizontal, gameboard, l, z, w, page
    fill(colh[0], colh[1], colh[2])  # head colour
    gameboard[x][y] = 0  # starting position of head

    # movement
    if dir_y == "up":
        gameboard[x][y] = 1  # set previous square to blank
        y -= 1
        gameboard[x][y] = 0  # set current square to 0
        if y == -1:
            page = 4
    elif dir_y == "down":
        gameboard[x][y] = 1
        y += 1
        gameboard[x][y] = 0
        if y == 30:
            page = 4
    if dir_x == "right":
        gameboard[x][y] = 1
        x += 1
        gameboard[x][y] = 0
        if x == 30:
            page = 4
    elif dir_x == "left":
        gameboard[x][y] = 1
        x -= 1
        gameboard[x][y] = 0
        if x == -1:
            page = 4

    # create lists to store all previous positions of snake head
    vertical.append(y)
    horizontal.append(x)

    # check if 0, if 0->change to red
    for n in range(30):
        for i in range(30):
            if gameboard[i][n] == 0:
                fill(colh[0], colh[1], colh[2])
                rect(i * 20, n * 20, 20, 20)

    # body of snake
    for n in range(2, l):
        z = (horizontal[len(horizontal) - n])  # previous positions
        w = (vertical[len(vertical) - n])
            # rect((horizontal[len(horizontal)-n])*20,(body[len(body)-n])*20,20,20)
        gameboard[z][w] = 50  # change previous position to 50
    for n in range(30):
        for i in range(30):
            if gameboard[i][n] == 50:  # if 50, change to green
                fill(colb[0], colb[1], colb[2])
                rect(i * 20, n * 20, 20, 20)
                gameboard[i][n] = 1  # change back to 1(blank)
    # detect if snake is colliding with itself
    if gameboard[x][y] == 1:
        page = 4  # game over page

def food():
    global a, b, v, l, x, y, gameboard
    # if 31-> food
    # choose random coordinates
    if b == 0:
        a = random.randrange(0, 30)
        v = random.randrange(0, 30)
        b = 1
    # turn random coordinate into 31
    gameboard[v][a] = 31
    # turn 31 into blue
    for n in range(30):
        for i in range(30):
            if gameboard[i][n] == 31:
                fill(0, 0, 255)
                rect(i * 20, n * 20, 20, 20)
    # collision- if snake touches food, add one body section and choose
    # another random coordinate for food
    if gameboard[x][y] == 31:
        # gameboard[v][a]=1
        l += 1
        b = 0

def grid():
    # grid of gameboard
    fill(255, 255, 255)
    for n in range(30):
        for i in range(30):
            rect(i * 20, n * 20, 20, 20)


def keyPressed():
    global x, y, dir_y, dir_x
    if keyCode == UP:
        dir_y = "up"
        dir_x = 0

    elif keyCode == DOWN:
        dir_y = "down"
        dir_x = 0

    if keyCode == RIGHT:
        dir_x = "right"
        dir_y = 0
    elif keyCode == LEFT:
        dir_x = "left"
        dir_y = 0

